@model List<Produto> 

@{
    Layout = "_Layout";
}

  @* <span>@Model.Count</span> *@

   <h2 class="text-danger">Produtos</h2>
<br>
  <div class="row">
  @foreach(var prod in Model){
  <div class="card col-sm-4" style="width: 30rem; margin: 5px;">
    <div class="card-body text-center">
      
     <img src="/imagens/@prod.NomeImagem" style="width: 60px;">
      <h5 class="card-title text-danger">Produto: @prod.Nome</h5>
      <h6 class="card-subtitle mb-2 text-muted">Descricao: @prod.Descricao</h6>
      <h6 class="card-subtitle mb-2 text-muted">Empresa: @prod.Empresa.Nome</h6>
      <h6 class="card-subtitle mb-2 text-muted">Valor: @prod.Valor</h6>

        <a href="/produto/adicionarcarrinho/@prod.Id" >Comprar</a> 
    </div>
  </div>
   }
   </div>