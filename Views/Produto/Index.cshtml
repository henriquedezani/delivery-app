@model List<Produto>

@{
    Layout = "_LayoutEmpresa";
}

  <div>
    <a asp-action="create" class="float-right btn btn-danger">Adicionar Produto</a>
  </div>    
  <br/>
  <h2 class="text-danger">Produtos</h2>
  <table class="table" style="margin-top: 20px;">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Descrição</th>
        <th>Valor</th>
        <th>Imagem</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
    @foreach(var produto in Model){
      <tr class="text-danger">
        <td>@produto.Nome</td>
        <td>@produto.Descricao</td>
        <td>@produto.Valor</td>
        <td><img src="/imagens/@produto.NomeImagem" style="width: 30px;"></td>
        <td>
          <a asp-action="update" asp-route-id="@produto.Id">Editar</a> 
        </td>
      </tr>
    }
    </tbody>
  </table>