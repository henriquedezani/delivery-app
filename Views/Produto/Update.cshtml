@model Produto

@{
    Layout = "_LayoutEmpresa";
}

<div class="container">
  <h2 class="text-danger">Adicionar Produto</h2>
  <br/>
  <form action="/produto/update" method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <label class="control-label col-sm-2" for="Nome">Nome:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control"  placeholder="Nome" asp-for="Nome">
        <span asp-validation-for="Nome"></span>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-12" for="descricao">Descrição:</label>
      <div class="col-sm-10">          
        <input type="text" class="form-control"  placeholder="Descrição"  asp-for="Descricao">
        <span asp-validation-for="Descricao"></span>
     </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-12" for="valor">Valor:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control money"  placeholder="Valor" asp-for="Valor">
        <span asp-validation-for="Valor"></span>
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-12" for="imagem">Imagem do arquivo:</label>
      <div class="col-sm-10">
        <input type="file" class="form-control" asp-for="Imagem">
        <span asp-validation-for="Imagem"></span>
      </div>
    </div>
    <br/>
    <input type="hidden" asp-for="Id" value="@Model.Id">

    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <button class="btn btn-danger">Alterar</button>
      </div>
    </div>
  </form>
</div>
